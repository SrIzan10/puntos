generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Point {
  id        Int      @id @default(autoincrement())
  userId      String
  createdAt DateTime @default(now())
  number    Int
  reason    String
}

model PointCount {
  userId      String @id
  balance Int
}